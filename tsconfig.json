{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext.Array","DOM"],
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": ".dist/"
  },
  "include": ["src/*"],
  "exclude": ["__tests__/*"],
}
